<%= form_with(model: concert) do |form| %>
    <% if concert.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(concert.errors.count, "error") %> prohibited this concert from being saved:
        </h2>

        <ul>
            <% concert.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.label :participants %>
        <%= form.text_field :participants %>
    </div>

    <div class="field">
        <%= form.label :duration_in_minutes %>
        <%= form.number_field :duration %>
    </div>

    <div class="field">
        <%= form.label :concert_date %>
        <%= form.date_field :concert_date %>
    </div>

    <div class="field">
        <select name="concert[Group_id]">
            <% @groups.each do |group| %>
                <option value="<%= group.id %>"><%= group.name %></option>
            <% end %>
        </select>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>
