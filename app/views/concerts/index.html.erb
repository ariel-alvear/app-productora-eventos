<h1>Concerts</h1>

<table>
    <thead>
        <tr>
            <th>Participants</th>
            <th>Duration</th>
            <th>Concert date</th>
            <th>Group</th>
        </tr>
    </thead>

    <tbody>
        <% @concerts.each do |concert| %>
            <tr>
                <td><%= concert.participants %></td>
                <td><%= concert.duration.strftime("%T") %></td>
                <td><%= concert.concert_date %></td>
                <td><%= concert.get_group_name %></td>

                <br>
                
                <td><%= link_to 'Show', concert %></td>
                <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
                <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path %>


